#!/usr/bin/env groovy
pipeline {
    agent {
        node {
            label 'cv-server'
            customWorkspace 'cv_server'
        }
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
        timeout(time: 1, unit: 'HOURS')
        timestamps()
    }

    tools {
        jdk 'Java JDK 8u221'
        maven 'maven 3.6.3'
        docker 'docker-latest'
    }

    environment {
        IS_SNAPSHOT = 'TRUE'
    }

    stages {
        stage('Build') {
            steps {
                sh "mvn -B -U clean package"
            }
        }

//        stage('Build Docker Image') {
//            steps {
//                sh "docker build --build-arg JAR_FILE=cv_server-0.0.1-SNAPSHOT.jar ."
//            }
//        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            deleteDir()
        }
    }
}
