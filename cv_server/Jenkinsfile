#!/usr/bin/env groovy
pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
        timeout(time: 1, unit: 'HOURS')
        timestamps()
    }

    tools {
        jdk 'Java JDK 8u221'
        maven 'maven 3.6.3'
    }

    environment {
        POM = readMavenPom 'cv_server/pom.xml'
        IS_SNAPSHOT = POM().getVersion().endsWith("-SNAPSHOT")
    }

    stages {
        stage('Build') {
            steps {
                dir('cv_server') {
                    sh "mvn -B -U clean package"
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'cv_server/target/*.jar', fingerprint: true
            deleteDir()
        }
    }
}
